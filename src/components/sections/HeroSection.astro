<style>
.hero-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  min-height: 90vh;
  padding: 8rem 4rem;
  background: radial-gradient(circle at 30% 20%, #101014, #0b0b0d);
  color: #fff;
  overflow: hidden;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.content {
  flex: 1 1 500px;
  max-width: 600px;
  z-index: 2;
}

.title {
  font-family: "Apple Garamond", serif;
  font-size: clamp(2.5rem, 5vw, 4rem);
  line-height: 1.1;
  margin-bottom: 1.5rem;
}

.subtitle {
  font-family: "Apple Garamond", serif;
  font-size: 1.2rem;
  color: #ccc;
  line-height: 1.6;
  margin-bottom: 2rem;
}

.cta {
  display: flex;
  gap: 1rem;
}

.btn {
  display: inline-block;
  padding: 0.9rem 1.8rem;
  border-radius: 8px;
  font-family: "Apple Garamond", serif;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.btn.primary {
  background: #5E6AD2;
  color: #fff;
}
.btn.primary:hover {
  background: #6E7AF8;
  transform: translateY(-2px);
}

.btn.ghost {
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: #fff;
}
.btn.ghost:hover {
  background: rgba(255, 255, 255, 0.05);
  transform: translateY(-2px);
}

.visual {
  flex: 1 1 500px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.visual img {
  width: 100%;
  max-width: 480px;
  filter: drop-shadow(0 0 25px rgba(94, 106, 210, 0.2));
  border-radius: 12px;
}
</style>
