---
import { motion } from "framer-motion";
import { Menu, X } from "lucide-react";

const navLinks = [
  { name: "Início", href: "/" },
  { name: "Sobre", href: "/company" },
  { name: "Soluções", href: "/solutions" },
  { name: "Preços", href: "/pricing" },
  { name: "Contato", href: "/contact" },
];

let open = false;
---

<header class="fixed top-0 left-0 w-full z-50 backdrop-blur-lg bg-black/30 border-b border-white/10">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="text-xl font-semibold tracking-wide text-white">
      VALORA<span class="text-[#00FFA8]">GATE</span>
    </a>

    <!-- Desktop Menu -->
    <nav class="hidden md:flex items-center space-x-8">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-sm text-gray-300 hover:text-white transition"
        >
          {link.name}
        </a>
      ))}
      <a
        href="/login"
        class="px-4 py-2 rounded-full border border-white/20 hover:bg-white/10 transition"
      >
        Entrar
      </a>
    </nav>

    <!-- Mobile Menu -->
    <button class="md:hidden p-2 text-white" onClick={() => (open = !open)} aria-label="Menu">
      {open ? <X size={22} /> : <Menu size={22} />}
    </button>
  </div>

  {open && (
    <motion.nav
      initial={{ opacity: 0, y: -10 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -10 }}
      transition={{ duration: 0.25 }}
      class="md:hidden bg-black/80 backdrop-blur-md border-t border-white/10"
    >
      <ul class="flex flex-col items-center py-4 space-y-4">
        {navLinks.map(link => (
          <li>
            <a href={link.href} class="text-gray-300 hover:text-white transition text-sm">
              {link.name}
            </a>
          </li>
        ))}
        <li>
          <a href="/login" class="px-4 py-2 rounded-full border border-white/20 hover:bg-white/10 transition">
            Entrar
          </a>
        </li>
      </ul>
    </motion.nav>
  )}
</header>
