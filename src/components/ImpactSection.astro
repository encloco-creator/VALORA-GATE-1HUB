---
import FadeUp from "../components/animations/FadeUp.jsx";
---

<section class="section bg-[#0B0B0C] border-t border-white/10 text-center">
  <div class="max-w-6xl mx-auto px-6">
    <FadeUp client:visible>
      <h2 class="section-title mb-10 gradient-text">Impacto e Resultados</h2>
    </FadeUp>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-10 text-center">
      <FadeUp client:visible>
        <div>
          <h3 class="text-4xl font-logo text-white mb-2">+200</h3>
          <p class="text-gray-400 text-sm">Empresas conectadas</p>
        </div>
      </FadeUp>

      <FadeUp client:visible delay={0.05}>
        <div>
          <h3 class="text-4xl font-logo text-white mb-2">R$ 1,2 bi</h3>
          <p class="text-gray-400 text-sm">Operações otimizadas</p>
        </div>
      </FadeUp>

      <FadeUp client:visible delay={0.1}>
        <div>
          <h3 class="text-4xl font-logo text-white mb-2">+45%</h3>
          <p class="text-gray-400 text-sm">Economia média</p>
        </div>
      </FadeUp>

      <FadeUp client:visible delay={0.15}>
        <div>
          <h3 class="text-4xl font-logo text-white mb-2">8 países</h3>
          <p class="text-gray-400 text-sm">Empresas integradas</p>
        </div>
      </FadeUp>
    </div>
  </div>
</section>
