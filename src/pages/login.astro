---
import Base from "../layouts/Base.astro";
---

<Base>
  <section class="min-h-[80vh] flex flex-col items-center justify-center text-center px-6">
    <div class="w-full max-w-sm bg-white/5 border border-white/10 rounded-2xl p-6">
      <h1 class="text-3xl font-logo mb-6 gradient-text">Acesse sua conta</h1>

      <form class="space-y-4">
        <input type="email" placeholder="E-mail"
          class="w-full p-3 bg-transparent border border-white/10 rounded-md focus:outline-none" />
        <input type="password" placeholder="Senha"
          class="w-full p-3 bg-transparent border border-white/10 rounded-md focus:outline-none" />
        <button type="submit"
          class="w-full px-4 py-3 rounded-full border border-white/20 bg-white/10 hover:bg-white/20 transition backdrop-blur-md">
          Entrar
        </button>
      </form>

      <p class="text-sm text-gray-400 mt-6">
        NÃ£o tem uma conta? <a href="/contact" class="text-white underline">Fale com a equipe Valora</a>
      </p>
    </div>
  </section>
</Base>
